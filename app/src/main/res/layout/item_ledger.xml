<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="12dp">

    <TextView android:id="@+id/txtTitle" android:textStyle="bold"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Grocery shopping"/>

    <TextView android:id="@+id/txtMeta"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Nov 15 • Paid by Alice • Food"/>

    <TextView android:id="@+id/txtAmount"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="end" android:text="£42.50" android:textStyle="bold"/>
</LinearLayout>
